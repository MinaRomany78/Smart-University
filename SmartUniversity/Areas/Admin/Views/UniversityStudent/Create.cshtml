@model Entities.ViewModel.AdminUniversityStudentVM

@{
    ViewData["Title"] = "Create University Student";
}

@if (TempData["error-notification"] != null)
{
    <div class="alert alert-danger">
        @TempData["error-notification"]
    </div>
}
@if (TempData["success-notification"] != null)
{
    <div class="alert alert-success">
        @TempData["success-notification"]
    </div>
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Add New Student</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="UniversityStudent" asp-area="Admin" method="post">
                <div class="row">
                    <!-- National ID -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="NationalId" class="form-label"></label>
                        <input asp-for="NationalId" class="form-control" readonly />
                        <span asp-validation-for="NationalId" class="text-danger"></span>
                    </div>

                    <!-- First Name -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="DepartmentId" class="form-label">Department</label>
                        <select asp-for="DepartmentId" asp-items="Model.DepartMentList" class="form-select" id="DepartmentId">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>

                    <!-- Term -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="TermId" class="form-label">Term</label>
                        <select asp-for="TermId" class="form-select" id="TermId">
                            <option value="">-- Select Term --</option>
                        </select>
                        <span asp-validation-for="TermId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" asp-area="Admin" asp-controller="UniversityStudent"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#DepartmentId").change(function () {
                var deptId = $(this).val();
                var termDropdown = $("#TermId");

                termDropdown.empty();
                termDropdown.append($('<option>', { value: "", text: "-- Select Term --" }));

                if (deptId) {
                    $.getJSON('/Admin/UniversityStudent/GetTermsByDepartment',
                        { departmentId: deptId },
                        function (data) {
                            $.each(data, function (i, term) {
                                termDropdown.append($('<option>', {
                                    value: term.id,
                                    text: term.name
                                }));
                            });
                        });
                }
            });
        });
    </script>
}
