@using Entities.ViewModel
@model ManageAdminVM

<div class="container mt-4">
    <div class="card shadow-sm p-4 rounded-4">
        <h4 class="mb-3 text-primary">Create Admin / SuperAdmin</h4>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-check form-switch mt-4">
                    <input class="form-check-input" asp-for="IsEmailConfirmed" type="checkbox" role="switch" />
                    <label class="form-check-label fw-bold" asp-for="IsEmailConfirmed"></label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-semibold"></label>
                <select asp-for="Role" asp-items="ViewBag.Roles" class="form-select"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary fw-semibold">Create</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

