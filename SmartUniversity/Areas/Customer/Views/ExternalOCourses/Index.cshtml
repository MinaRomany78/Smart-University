@model IEnumerable<UserOptionalCourse>

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center text-gradient">🎓 My Enrolled Courses</h2>

    <div class="row g-4">
        @foreach (var userCourse in Model)
        {
            var course = userCourse.OptionalCourse;
            <div class="col-md-6 col-lg-4">
                <div class="card course-card shadow-lg border-0 h-100 rounded-4 overflow-hidden bg-white">
                    <!-- Course Image -->
                    <div class="card-img-container">
                        <img src="~/images/@course.MainImg" class="card-img-top" alt="@course.Name" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@course.Name</h5>

                        <p class="card-text text-muted mb-2 d-flex align-items-center gap-2">
                            <i class="fas fa-sticky-note text-secondary"></i>
                            <span>@course.Description</span>
                        </p>

                        <p class="card-text text-success mb-3 d-flex align-items-center gap-2">
                            <i class="fas fa-chalkboard-teacher"></i>
                            Instructor: <strong>@course.Instructor.ApplicationUser.FullName</strong>
                        </p>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-gradient w-100 fw-semibold rounded-pill shadow-sm">
                                View Course
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        :root {
            --primary: #4e54c8;
            --accent: #8f94fb;
            --secondary: #6c63ff;
        }

        .text-gradient {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .course-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 1.2rem;
            overflow: hidden;
            background-color: #fff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

            .course-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 40px rgba(78, 84, 200, 0.25);
            }

        .card-img-container {
            height: 200px;
            overflow: hidden;
        }

            .card-img-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

        .course-card:hover .card-img-container img {
            transform: scale(1.1);
        }

        .btn-gradient {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: white;
            border: none;
            padding: 12px;
            font-size: 1rem;
            font-weight: 600;
            transition: opacity 0.3s ease, transform 0.3s ease;
            box-shadow: 0 6px 20px rgba(78, 84, 200, 0.3);
            border-radius: 50px;
            user-select: none;
        }

            .btn-gradient:hover,
            .btn-gradient:focus {
                opacity: 0.9;
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(78, 84, 200, 0.5);
                outline: none;
            }
    </style>
}

