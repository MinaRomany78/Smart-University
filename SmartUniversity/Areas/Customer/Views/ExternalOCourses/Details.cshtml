@model UserOptionalCourse

<style>
    .course-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(37, 117, 252, 0.3);
    }

        .course-header h2 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .course-header p.description {
            font-size: 1.1rem;
            opacity: 0.85;
        }

    .price-tag {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 1rem;
    }

    table thead {
        background-color: #2575fc;
        color: white;
        border-radius: 0.5rem;
    }

    table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .btn-sm {
        border-radius: 0.3rem;
        font-weight: 600;
        padding: 0.25rem 0.6rem;
        font-size: 0.85rem;
        transition: transform 0.15s ease;
    }

        .btn-sm:hover {
            transform: scale(1.05);
        }

    .icon-lock {
        font-size: 1.2rem;
    }
</style>

<div class="container py-5">
    <div class="row align-items-center course-header mb-5">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="~/images/@Model.OptionalCourse.MainImg" alt="@Model.OptionalCourse.Name" class="img-fluid rounded-3 shadow-lg" />
        </div>
        <div class="col-md-6">
            <h2>@Model.OptionalCourse.Name</h2>
            <p class="description">@Model.OptionalCourse.Description</p>
            <p class="price-tag">Price: <span class="text-warning">$@Model.OptionalCourse.Price</span></p>
            <p>Instructor: <strong>@Model.OptionalCourse.Instructor.ApplicationUser.FullName</strong></p>
        </div>
    </div>

    <h3 class="mb-4" style="color:#2575fc; font-weight:700;">Sessions</h3>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Material</th>
                    <th>Status</th>
                    <th class="text-center">Submit Task</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.OptionalCourse.Sessions.OrderBy(s => s.Order))
                {
                <tr>
                    <td>@session.Title</td>
                    <td>@session.ReleaseDate.ToShortDateString()</td>
                    <td>
                            @if (!session.IsLocked)
                            {
                                <a href="@session.MaterialLink" target="_blank" class="text-decoration-none">
                                    <i class="bi bi-folder2-open"></i> Material
                                </a>
                            }
                            else
                            {
                                <span class="text-muted"><i class="bi bi-folder2"></i> Locked</span>
                            }
                    </td>
                    <td class="text-center icon-lock">
                        @Html.Raw(session.IsLocked
                                                ? "<span title='Locked' class='text-danger'>🔒</span>"
                                                : "<span title='Unlocked' class='text-success'>🔓</span>")
                    </td>
                    <td class="text-center">
                        @if (!session.IsLocked)
                            {
                                var existingTask = session.Tasks?.FirstOrDefault(t => t.ApplicationUserId == Model.ApplicationUserId);

                                <form asp-action="SubmitTask" method="post" class="d-flex align-items-center gap-2 justify-content-center">
                                    <input type="hidden" name="sessionId" value="@session.Id" />
                                    <input type="text"
                                           name="submissionLink"
                                           placeholder="Enter submission link..."
                                           class="form-control form-control-sm w-75"
                                           value="@(existingTask?.SubmissionLink ?? string.Empty)"
                                           required />
                                    <button type="submit" class="btn btn-sm @(existingTask != null ? "btn-warning" : "btn-success")">
                                        @(existingTask != null ? "Update" : "Submit")
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">Locked</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />