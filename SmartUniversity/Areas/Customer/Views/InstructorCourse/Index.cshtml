@model IEnumerable<OptionalCourse>

<div class="container py-5">

    <div class="text-center mb-5">
        <a asp-action="ApplyNewCourse" class="btn-apply">
            <span style="font-size:1.4em; color: initial;">📩</span>
            <i class="bi bi-send-fill"></i>
            <span class="btn-text">Applying for a new course</span>
        </a>
    </div>

    <h2 class="fw-bold mb-5 text-center d-flex justify-content-center align-items-center gap-2">
        <span style="font-size:1.5em;">📔</span>
        <span class="text-gradient">My Courses</span>
    </h2>

    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card course-card shadow-lg border-0 h-100 rounded-4 overflow-hidden bg-white d-flex flex-column">
                    <div class="card-img-container">
                        <img src="~/images/@course.MainImg" class="card-img-top" alt="@course.Name" />
                    </div>

                    <div class="card-body d-flex flex-column flex-grow-1">
                        <h5 class="card-title fw-bold text-dark">@course.Name</h5>

                        <p class="card-text text-muted mb-3 d-flex align-items-center gap-2">
                            <i class="fas fa-sticky-note text-secondary"></i>
                            <span>@course.Description</span>
                        </p>

                        <p class="card-text text-success mb-4 d-flex align-items-center gap-2">
                            <i class="fas fa-dollar-sign"></i>
                            Price: <strong>@course.Price.ToString("C")</strong>
                        </p>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-gradient w-100 fw-semibold rounded-pill shadow-sm">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        :root {
            --primary: #4e54c8;
            --accent: #8f94fb;
            --secondary: #6c63ff;
        }

        /* زر التقديم */
        .btn-apply {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: #fff;
            padding: 16px 28px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 700;
            text-decoration: none;
            box-shadow: 0 8px 24px rgba(78, 84, 200, 0.35);
            transition: all 0.3s ease-in-out;
            overflow: hidden;
            white-space: nowrap;
            user-select: none;
        }

            .btn-apply i {
                font-size: 1.3rem;
                transition: transform 0.3s ease;
                color: white;
            }

            .btn-apply .btn-text {
                max-width: 0;
                opacity: 0;
                overflow: hidden;
                transition: max-width 0.4s ease, opacity 0.4s ease;
            }

            .btn-apply:hover {
                padding: 16px 40px;
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(78, 84, 200, 0.6);
            }

                .btn-apply:hover i {
                    transform: translateX(6px);
                }

                .btn-apply:hover .btn-text {
                    max-width: 320px;
                    opacity: 1;
                }

        /* تدرج النص */
        .text-gradient {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* كروت الكورسات */
        .course-card {
            transition: transform 0.35s ease, box-shadow 0.35s ease;
            border-radius: 1.5rem;
            overflow: hidden;
            background-color: #fff;
            box-shadow: 0 6px 20px rgba(0,0,0,0.07);
            display: flex;
            flex-direction: column;
        }

            .course-card:hover {
                transform: translateY(-12px);
                box-shadow: 0 20px 50px rgba(78, 84, 200, 0.3);
            }

        .card-img-container {
            height: 220px;
            overflow: hidden;
            border-top-left-radius: 1.5rem;
            border-top-right-radius: 1.5rem;
        }

            .card-img-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

        .course-card:hover .card-img-container img {
            transform: scale(1.12);
        }

        .card-body {
            padding: 1.8rem 1.5rem 2rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .card-title {
            font-size: 1.3rem;
            margin-bottom: 0.8rem;
            color: #222;
        }

        .card-text {
            font-size: 0.95rem;
        }

            .card-text.text-muted {
                color: #6c757d;
            }

            .card-text.text-success {
                font-weight: 600;
                font-size: 1rem;
            }

        .btn-gradient {
            background: linear-gradient(90deg, var(--primary), var(--accent));
            color: white;
            border: none;
            padding: 14px;
            font-size: 1.1rem;
            font-weight: 700;
            transition: opacity 0.3s ease, transform 0.3s ease;
            box-shadow: 0 8px 24px rgba(78, 84, 200, 0.35);
            border-radius: 50px;
            user-select: none;
            width: 100%;
            display: inline-flex;
            justify-content: center;
            align-items: center;
        }

            .btn-gradient:hover,
            .btn-gradient:focus {
                opacity: 0.9;
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(78, 84, 200, 0.6);
                outline: none;
            }
    </style>
}
