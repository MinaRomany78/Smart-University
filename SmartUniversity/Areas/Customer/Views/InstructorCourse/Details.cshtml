@model OptionalCourse

<style>
    .course-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(37, 117, 252, 0.3);
    }

        .course-header h2 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .course-header p.description {
            font-size: 1.1rem;
            opacity: 0.85;
        }

    .price-tag {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 1rem;
    }

    .btn-add-session {
        margin-top: 1.5rem;
        font-weight: 600;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
        border-radius: 50px;
        box-shadow: 0 4px 12px rgba(37, 117, 252, 0.4);
        transition: background-color 0.3s ease;
    }

        .btn-add-session:hover {
            background-color: #1a4ed8;
        }

    table thead {
        background-color: #2575fc;
        color: white;
        border-radius: 0.5rem;
    }

    table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .btn-sm {
        border-radius: 0.3rem;
        font-weight: 600;
        padding: 0.25rem 0.6rem;
        font-size: 0.85rem;
        transition: transform 0.15s ease;
    }

        .btn-sm:hover {
            transform: scale(1.05);
        }

    .icon-lock {
        font-size: 1.2rem;
    }
</style>

<div class="container py-5">
    <div class="row align-items-center course-header mb-5">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="~/images/@Model.MainImg" alt="@Model.Name" class="img-fluid rounded-3 shadow-lg" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="description">@Model.Description</p>
            <p class="price-tag">Price: <span class="text-warning">$@Model.Price</span></p>
            <a asp-controller="InstructorSession" asp-action="Create" asp-route-courseId="@Model.Id" class="btn btn-success btn-add-session">
                <i class="bi bi-plus-lg"></i> Add Session
            </a>
        </div>
    </div>

    <h3 class="mb-4" style="color:#2575fc; font-weight:700;">Sessions</h3>
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Material</th>
                    <th>Locked?</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.Sessions.OrderBy(s => s.Order))
                {
                    <tr>
                        <td>@session.Title</td>
                        <td>@session.ReleaseDate.ToShortDateString()</td>
                        <td>
                            <a href="@session.MaterialLink" target="_blank" class="text-decoration-none">
                                <i class="bi bi-folder2-open"></i> Material
                            </a>
                        </td>
                    <td class="icon-lock text-center">
                        @Html.Raw(session.IsLocked
                                                ? "<span title='Locked' class='text-danger'>🔒</span>"
                                                : "<span title='Unlocked' class='text-success'>🔓</span>")
                    </td>
                        <td class="text-center">
                            <a asp-controller="InstructorSession" asp-action="Edit" asp-route-id="@session.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="InstructorSession" asp-action="Delete" asp-route-id="@session.Id" class="btn btn-sm btn-danger me-1" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a asp-controller="InstructorSession" asp-action="ManageTasks" asp-route-sessionId="@session.Id" class="btn btn-sm btn-info" title="Manage Tasks">
                                <i class="bi bi-list-task"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- تأكد من إضافة Bootstrap Icons في مشروعك -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

