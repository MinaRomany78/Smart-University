@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@model Entities.ViewModel.CommunityVM
@{
    ViewData["Title"] = "Community";
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
    ViewData["ActiveTab"] = "Menu";
}

<div class="container max-w-4xl mx-auto mt-6" style="max-width: 900px; margin: 2rem auto;">

    <!-- Course Info -->
    <div class="card shadow-lg mb-5 rounded-4 overflow-hidden">
        <div class="card-body text-white p-5 course-header" style="background-color: @(Model.Color ?? "#0d6efd");">
            <h2 class="fw-bold mb-3">@Model.Course?.Name</h2>
            <p class="mb-4 opacity-90">@Model.Course?.Description</p>
            <div class="d-flex flex-column gap-2">
                <p class="mb-1 d-flex align-items-center">
                    <i class="bi bi-person-badge me-2"></i>
                    <strong>Doctor:</strong>
                    <span class="me-2">@Model.Course?.Doctor?.ApplicationUser.FullName </span>
                </p>
                @if (Model.Assistants != null && Model.Assistants.Any())
                {
                    <div class="d-flex align-items-center">
                        <i class="bi bi-people me-2"></i>
                        <strong class="me-2">Assistants:</strong>
                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var assistant in Model.Assistants)
                            {
                                <span class="badge-assistant">@assistant</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Create New Post -->
    <div class="card shadow-sm mb-5 rounded-4">
        <div class="card-body p-4">
            <form id="postForm" asp-action="CreatePost" method="post" enctype="multipart/form-data">
                <input type="hidden" name="CourseId" value="@Model.Course.Id" />
                <input type="hidden" name="color" value="@Model.Color" />   <!-- 🔹 مهم -->

                <div class="d-flex align-items-start gap-3">
                    <div class="avatar-placeholder">
                        <i class="bi bi-person-fill text-primary fs-5"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="input-group shadow-sm rounded-pill overflow-hidden mb-2">
                            <input type="text" name="Content" class="form-control post-input"
                             placeholder="Share something with your classmates..." required />
                            <button type="submit" class="btn btn-primary btn-post d-flex align-items-center">
                                <i class="bi bi-send me-1"></i> Post
                            </button>
                        </div>

                        <div class="d-flex gap-2 flex-wrap mb-2">
                            <button type="button" class="btn btn-outline-secondary action-btn d-flex align-items-center gap-1" id="btnSelectFiles">
                                <i class="bi bi-paperclip"></i> Files / Images
                            </button>
                            <input type="file" id="filesInput" name="Files" multiple
                                   accept="image/*,application/pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.mp4,.webm" class="d-none" />
                            <input type="text" name="Link" class="form-control" placeholder="Add a link..." style="max-width: 200px;" />
                        </div>

                        <!-- Display selected files -->
                        <div id="selectedFiles" class="mt-2"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Posts Section -->
    @if (Model.Posts != null && Model.Posts.Any())
    {
        @foreach (var post in Model.Posts)
        {
            <div class="card shadow-sm border-0 mb-4 rounded-4 hover-shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3 gap-3">
                        <div class="avatar-placeholder">
                            <i class="bi bi-person-fill text-secondary fs-5"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">@post.Author?.UserName </h6>
                            <small class="text-muted time-stamp">@post.PostDate.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>

                        @if (post.AuthorId == UserManager.GetUserId(User))
                        {
                            <div class="ms-auto dropdown">
                                <button class="btn btn-sm btn-link text-muted dropdown-toggle-no-caret" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-action="DeletePost" method="post">
                                            <input type="hidden" name="postId" value="@post.Id" />
                                            <input type="hidden" name="color" value="@Model.Color" /> <!-- 🔹 مهم -->
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-trash me-2"></i> Delete Post
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>

                    <p class="mt-2 mb-3">@post.Content</p>

                    @* ملفات *@
                    @if (post.Files != null && post.Files.Any())
                    {
                        <div class="mb-2 d-flex flex-wrap gap-2">
                            @foreach (var file in post.Files)
                            {
                                var extension = System.IO.Path.GetExtension(file.FilePath).ToLower();
                                if (extension == ".png" || extension == ".jpg" || extension == ".jpeg" || extension == ".gif")
                                {
                                    <img src="@file.FilePath" alt="@System.IO.Path.GetFileName(file.FilePath)"
                                         style="max-width:150px; border-radius:8px; cursor:pointer;"
                                         data-bs-toggle="modal" data-bs-target="#filePreviewModal" data-type="image" data-file="@file.FilePath" />
                                }
                                else if (extension == ".pdf")
                                {
                                    <div style="width:150px; height:200px; border:1px solid #ddd; border-radius:4px; display:flex; align-items:center; justify-content:center; cursor:pointer;"
                                         data-bs-toggle="modal" data-bs-target="#filePreviewModal" data-type="pdf" data-file="@file.FilePath">
                                        <i class="bi bi-file-earmark-pdf fs-2 text-danger"></i>
                                    </div>
                                }
                                else if (extension == ".mp4" || extension == ".webm")
                                {
                                    <div style="width:150px; height:100px; border:1px solid #ddd; border-radius:4px; display:flex; align-items:center; justify-content:center; cursor:pointer;"
                                         data-bs-toggle="modal" data-bs-target="#filePreviewModal" data-type="video" data-file="@file.FilePath">
                                        <i class="bi bi-film fs-2 text-primary"></i>
                                    </div>
                                }
                                else
                                {
                                    <a href="@file.FilePath" target="_blank">@System.IO.Path.GetFileName(file.FilePath)</a>
                                }
                            }
                        </div>
                    }

                    <hr />
                    <h6 class="fw-semibold text-muted mb-3">
                        Comments
                        <span class="badge bg-light text-muted ms-1">@post.Comments?.Count()</span>
                    </h6>

                    @if (post.Comments != null && post.Comments.Any())
                    {
                        @foreach (var comment in post.Comments)
                        {
                            <div class="d-flex align-items-start gap-2 ms-4 mb-3">
                                <div class="comment-avatar">
                                    <i class="bi bi-person-fill text-info fs-6"></i>
                                </div>
                                <div>
                                    <b>@(comment.Author?.UserName ?? "Anonymous")</b>
                                    <p class="mb-1">@comment.Content</p>
                                    <small class="text-muted time-stamp">@comment.DatePosted.ToString("MMM dd, yyyy HH:mm")</small>

                                    @if (comment.AuthorId == UserManager.GetUserId(User))
                                    {
                                        <div class="dropdown d-inline ms-2">
                                            <button class="btn btn-sm btn-link text-muted dropdown-toggle-no-caret" type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="DeleteComment" method="post">
                                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                                        <input type="hidden" name="color" value="@Model.Color" /> <!-- 🔹 مهم -->
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-trash me-2"></i> Delete Comment
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }

                    <form asp-action="AddComment" method="post" class="d-flex align-items-center ms-4 mt-2 gap-2">
                        <input type="hidden" name="PostId" value="@post.Id" />
                        <input type="hidden" name="color" value="@Model.Color" /> <!-- 🔹 مهم -->
                        <div class="comment-avatar">
                            <i class="bi bi-person-fill text-primary fs-6"></i>
                        </div>
                        <input type="text" name="Content" class="form-control comment-input" placeholder="Write a comment..." />
                        <button type="submit" class="btn btn-sm btn-primary rounded-pill px-3 d-flex align-items-center gap-1">
                            <i class="bi bi-send"></i> Send
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5 empty-state">
            <i class="bi bi-chat-dots fs-1 d-block mb-3"></i>
            <p class="mb-0 fs-5">No posts yet. Be the first to start the discussion!</p>
        </div>
    }
</div>


<!-- File Preview Modal -->
<div class="modal fade" id="filePreviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-0 position-relative">
                <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <iframe id="previewIframe" src="" frameborder="0" style="width:100%; height:90vh;"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // زرار يفتح الـ file input
        document.getElementById("btnSelectFiles").addEventListener("click", function () {
            document.getElementById("filesInput").click();
        });

        // عرض الملفات المختارة
        document.getElementById("filesInput").addEventListener("change", function () {
            const selectedFilesDiv = document.getElementById("selectedFiles");
            selectedFilesDiv.innerHTML = "";

            for (let file of this.files) {
                const fileDiv = document.createElement("div");
                fileDiv.classList.add("mb-2", "d-flex", "align-items-center", "gap-2");

                if (file.type.startsWith("image/")) {
                    const img = document.createElement("img");
                    img.src = URL.createObjectURL(file);
                    img.style.maxWidth = "80px";
                    img.style.maxHeight = "80px";
                    img.style.borderRadius = "6px";
                    img.style.objectFit = "cover";
                    fileDiv.appendChild(img);
                } else {
                    const icon = document.createElement("i");
                    icon.classList.add("bi", "bi-paperclip");
                    fileDiv.appendChild(icon);
                }

                const nameSpan = document.createElement("span");
                nameSpan.textContent = file.name;
                fileDiv.appendChild(nameSpan);

                selectedFilesDiv.appendChild(fileDiv);
            }
        });

        // Preview Modal
        const previewModal = document.getElementById('filePreviewModal');
        const previewIframe = document.getElementById('previewIframe');

        previewModal.addEventListener('show.bs.modal', function (event) {
            const trigger = event.relatedTarget;
            const fileUrl = trigger.getAttribute('data-file');
            const fileType = trigger.getAttribute('data-type');

            if (fileType === "image" || fileType === "pdf") {
                previewIframe.style.display = "block";
                previewIframe.src = fileUrl;
            }
            else if (fileType === "video") {
                previewIframe.style.display = "none";
                previewIframe.insertAdjacentHTML("afterend",
                    `<video id="previewVideo" src="${fileUrl}" controls autoplay style="width:100%; height:90vh; border:none;"></video>`
                );
            }
            else if (fileType === "doc") {
                previewIframe.style.display = "block";
                previewIframe.src = "https://docs.google.com/gview?url=" + encodeURIComponent(fileUrl) + "&embedded=true";
            }
        });

        previewModal.addEventListener('hidden.bs.modal', function () {
            previewIframe.src = "";
            previewIframe.style.display = "block";
            const video = document.getElementById("previewVideo");
            if (video) video.remove();
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #0d6efd;
            --light-bg: #f8f9fa;
        }

        .course-header {
            position: relative;
            overflow: hidden;
        }

            .course-header::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(255,255,255,0.1);
                clip-path: polygon(0 0, 100% 0, 100% 70%, 0 100%);
            }

        .avatar-placeholder, .comment-avatar {
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: var(--light-bg);
            border: 1px solid #dee2e6;
            flex-shrink: 0;
        }

        .avatar-placeholder {
            width: 50px;
            height: 50px;
        }

        .comment-avatar {
            width: 35px;
            height: 35px;
        }

        .post-input, .comment-input {
            border-radius: 50px !important;
            border: 1px solid #dee2e6;
            padding: 10px 18px;
        }

        .btn-post {
            border-radius: 50px;
            padding: 10px 24px;
            font-weight: 500;
        }

        .action-btn {
            border-radius: 50px;
            padding: 6px 15px;
            font-size: 0.85rem;
        }

        .badge-assistant {
            background-color: #e9f2ff;
            color: var(--primary-color);
            border-radius: 50px;
            padding: 6px 12px;
            font-weight: 500;
        }

        .hover-shadow:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.12) !important;
            transform: translateY(-3px);
            transition: all 0.3s ease-in-out;
        }

        .empty-state {
            color: #9aa0a6;
        }

        .time-stamp {
            font-size: 0.8rem;
        }

        /* 🔹 Dropdown بدون caret */
        .dropdown-toggle-no-caret::after {
            display: none !important;
        }
    </style>
}
